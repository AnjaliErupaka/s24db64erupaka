extends layout

block content
    h1= title
    if (toShow == null)
        h2 No instance to delete
    else
        - let dogid = toShow._id
        - let Dog_Breed = toShow.Dog_Breed
        - let Dog_Color = toShow.Dog_Color
        - let Dog_Name = toShow.Dog_Name
        - let actionid = "/resource/dogs/" + dogid
        script.
            let actionid = "#{actionid}"
        div
            div.row
                div(class='dogAttr mr-3') dog ID is:
                div #{dogid}
            div.row
                div(class='dogAttr mr-3') Dog_Breed is:
                div #{Dog_Breed}
            div.row
                div(class='dogAttr mr-3') Dog_Color is:
                div #{Dog_Color}
            div.row
                div(class='dogAttr mr-3') Dog_Name is:
                div #{Dog_Name}
            button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete
            button(class="btn btn-secondary m-2" onclick="cancel()") Cancel
        script.
            function cancel() {
                // Go back to the home page for the dog collection
                window.location.href='/dog';
            }
            function deleteOnid() {
                console.log("starting delete");
                // delete first
                fetch(actionid, {
                    method: 'DELETE' // Don't need a body for the delete
                }).then((resp) => {
                    return resp.json(); // or resp.text() or whatever the server sends
                }).then((body) => {
                    alert("Delete succeeded");
                    window.location.href='/dog';
                    // TODO handle body
                }).catch((error) => {
                    // TODO handle error
                    alert("Delete failed " + error);
                });
            }
